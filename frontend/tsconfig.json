{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@common/*": [
        "../common/src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte"
  ]
}
